class Solution:
    def countCharacters(self, words: List[str], chars: str) -> int:
        char_count = Counter(chars)
        count = 0

        for word in words:
            word_count = Counter(word)
            
            for ch in word_count:
                if word_count[ch] > char_count.get(ch, 0):
                    break
            else:
                count += len(word)

        return count